@model Vidly2.Models.Customer
@using System.Globalization
@{
    ViewBag.Title = "GetCustomerById";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var dob = Model.DOB.HasValue ? Model.DOB.Value.ToShortDateString() : string.Empty;
}



<div>
    <h1>Customer</h1>
    <hr />
    <dl class="dl-horizontal">
        <dd>
            <h2>@Html.DisplayFor(model => model.Name)</h2>
        </dd>


    </dl>

    <ul>
        <li>@Model.MembershipType.Name</li>
        <li>@Model.MembershipType.DiscountRate%</li>

        @if (!String.IsNullOrEmpty(dob))
        {
           <li>
                @dob
            </li>
        }
    </ul>
</div>
