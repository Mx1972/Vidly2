@model IEnumerable<Vidly2.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Movies</h1>

@using (Html.BeginForm("Edit", "Movie", new { id = 0 }))
{
    <button type="submit" class="btn btn-default">New Movie</button>
}

@if (Model.Count() == 0)
{
    <text>There is no movies</text>
}
else
{
    <table class="table table-­‐bordered table-­‐hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td> @Html.ActionLink(movie.Id.ToString(), "Edit", new { id = movie.Id }, null)</td>
                <td> @movie.Title</td>
                <td> @movie.Genre.Description</td>
            </tr>
            }
        </tbody>
    </table>
}
